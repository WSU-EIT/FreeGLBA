@* FreeGLBA.App.EditSourceSystem.razor - Edit/Create form for SourceSystem *@
@* Generated by Entity Builder Wizard *@

<div class="modal fade show d-block" tabindex="-1" style="background: rgba(0,0,0,0.5);">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fa-solid @(IsNew ? "fa-plus" : "fa-pen") me-2"></i>
                    @(IsNew ? "New" : "Edit") Source System
                </h5>
                <button type="button" class="btn-close" @onclick="Cancel"></button>
            </div>
            <div class="modal-body">
                <EditForm Model="Item" OnValidSubmit="Save">
                    <DataAnnotationsValidator />
                    <div class="mb-3">
                        <label class="form-label">Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" @bind="Item.Name" placeholder="e.g., Banner, PeopleSoft, etc." />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Display Name</label>
                        <input type="text" class="form-control" @bind="Item.DisplayName" placeholder="Friendly name for display" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Contact Email</label>
                        <input type="email" class="form-control" @bind="Item.ContactEmail" placeholder="admin@example.com" />
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="isActive" @bind="Item.IsActive" />
                        <label class="form-check-label" for="isActive">Active</label>
                        <div class="form-text">Inactive source systems cannot send events via API.</div>
                    </div>

                    @if (!IsNew)
                    {
                        <hr />
                        <h6 class="text-muted">API Key</h6>
                        <div class="mb-3">
                            <div class="input-group">
                                <input type="@(_showApiKey ? "text" : "password")" class="form-control font-monospace" 
                                       value="@Item.ApiKey" readonly />
                                <button type="button" class="btn btn-outline-secondary" @onclick="ToggleApiKeyVisibility">
                                    <i class="fa-solid @(_showApiKey ? "fa-eye-slash" : "fa-eye")"></i>
                                </button>
                                <button type="button" class="btn btn-outline-primary" @onclick="CopyApiKey" title="Copy to clipboard">
                                    <i class="fa-solid fa-copy"></i>
                                </button>
                            </div>
                            <div class="form-text">Use this API key in the Authorization header when sending events.</div>
                        </div>
                        
                        <div class="mb-3">
                            <button type="button" class="btn btn-warning btn-sm" @onclick="RegenerateApiKey">
                                <i class="fa-solid fa-rotate me-1"></i>Regenerate API Key
                            </button>
                            <div class="form-text text-warning">Warning: Regenerating will invalidate the current key.</div>
                        </div>

                        <hr />
                        <h6 class="text-muted">Statistics</h6>
                        <div class="row">
                            <div class="col-md-6">
                                <label class="form-label text-muted small">Last Event Received</label>
                                <div class="form-control-plaintext">
                                    @(Item.LastEventReceivedAt.HasValue ? Item.LastEventReceivedAt.Value.ToString("MMM dd, yyyy h:mm tt") : "Never")
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label text-muted small">Total Events</label>
                                <div class="form-control-plaintext">@Item.EventCount.ToString("N0")</div>
                            </div>
                        </div>
                    }
                </EditForm>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="Cancel">Cancel</button>
                <button type="button" class="btn btn-primary" @onclick="Save">
                    <i class="fa-solid fa-save me-1"></i>Save
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public DataObjects.SourceSystem Item { get; set; } = new();
    [Parameter] public EventCallback<DataObjects.SourceSystem> OnSave { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }

    private bool IsNew => Item.SourceSystemId == default;
    private bool _showApiKey = false;
    private bool _regenerateKey = false;

    protected override void OnParametersSet()
    {
        // For new items, set IsActive to true by default
        if (IsNew)
        {
            Item.IsActive = true;
        }
    }

    private void ToggleApiKeyVisibility() => _showApiKey = !_showApiKey;

    private async Task CopyApiKey()
    {
        // This would need JS interop to copy to clipboard
        // For now, just toggle visibility so user can copy manually
        _showApiKey = true;
    }

    private void RegenerateApiKey()
    {
        _regenerateKey = true;
    }

    private async Task Save()
    {
        // Signal if we need to regenerate the API key
        if (IsNew || _regenerateKey)
        {
            Item.ApiKey = "REGENERATE"; // Special marker for the backend
        }
        await OnSave.InvokeAsync(Item);
    }

    private async Task Cancel() => await OnCancel.InvokeAsync();
}
